generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_CONNECTION_URL")
}

model Recipe {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  slug           String          @unique
  title          String
  summary        String
  ingredients    Ingredient[]
  steps          Step[]
  tags           Tag[]
  notes          Note[]
  nutrition_info NutritionInfo
}

type Ingredient {
  id      String  @map("_id") @db.ObjectId
  note_id String? @map("_note_id") @db.ObjectId

  amount   String
  name     String
  prep     String?
  to_taste Boolean?
}

type Step {
  text String
}

type Tag {
  name       String
  categories String[]
}

type Note {
  id   String @map("_id") @db.ObjectId
  text String
}

type NutritionInfo {
  summary_stats NutritionStats?
  items         NutritionItem[]
}

type NutritionItem {
  id            String @map("_id") @db.ObjectId
  ingredient_id String @map("_ingredient_id") @db.ObjectId

  food_name String?

  // Serving
  serving_qty          Float?
  serving_unit         String?
  serving_weight_grams Float?

  stats        NutritionStats
  alt_measures NutritionAltMeasure[]
}

type NutritionStats {
  calories           Float?
  total_fat          Float?
  saturated_fat      Float?
  cholesterol        Float?
  sodium             Float?
  total_carbohydrate Float?
  dietary_fiber      Float?
  sugars             Float?
  protein            Float?
  potassium          Float?
  p                  Float?
}

type NutritionAltMeasure {
  serving_weight Float
  measure        String
  seq            Int?
  qty            Float
  nutritionId    Int
}
